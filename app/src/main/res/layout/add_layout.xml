<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="48dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="97dp"
        android:text="Cost" />

    <EditText
        android:id="@+id/add_electricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Add Electricity"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/add_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_electricity"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="Add Cost"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:text="Add Expense" />


    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="262dp"
        android:layout_height="215dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/add_date"
        android:layout_marginBottom="21dp"
        android:visibility="visible">
        android: layout_below="@id/add"</CalendarView>

    <Button
        android:id="@+id/add_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toStartOf="@+id/add_electricity"
        android:text="Pick a Date" />

    <EditText
        android:id="@+id/add_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_cost"
        android:layout_toEndOf="@+id/add_date"
        android:ems="10"
        android:hint="Add Date"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="135dp"
        android:text="Date" />

    <Button
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add"
        android:layout_marginEnd="29dp"
        android:text="add Image" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="122dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
</RelativeLayout>